<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
      <TargetFrameworks>netstandard2.0;netstandard2.1;net6.0;net7.0</TargetFrameworks>
      <AssemblyName>JustinWritesCode.EntityFrameworkCore.Abstractions</AssemblyName>
      <PackageId>$(AssemblyName)</PackageId>
      <EnableGlobalCodeGenerators>false</EnableGlobalCodeGenerators>
    </PropertyGroup>
    <ItemGroup>
      <PackageReference Include="Microsoft.EntityFrameworkCore.Usings" />
      <PackageReference Include="Microsoft.EntityFrameworkCore" />
      <PackageReference Include="System.Collections.Generic.Usings" />
      <PackageReference Include="JustinWritesCode.Abstractions" ExcludeAssets="ContentFiles" />
      <PackageReference Include="JustinWritesCode.Security.Constants" ExcludeAssets="ContentFiles" />
      <PackageReference Include="JustinWritesCode.InterfaceGenerator" IncludeAssets="Analyzers;Build" ExcludeAssets="Compile; ContentFiles; Lib; Native" PrivateAssets="All" />
    </ItemGroup>
    <ItemGroup>
      <Using Remove="System.Text.Json*" />
    </ItemGroup>
  </Project>
